{
    "manifest_version": 2,
    "name": "Read On Paper",
    "description": "Sends page's text to a tablet for reading.",
    "version": "0.1",
    "background": { "scripts": ["background.js"] },
    "browser_action": {
        "name": "Read on paper",
        "default_icon": "icon.png"
    },
    "permissions": [
        "tabs", "http://*/*",
        "http://localhost:3500/"
    ]
}