{
    "manifest_version": 2,

    "name": "Read On Paper",
    "description": "Sends page's text to a tablet for reading.",
    "version": "0.1",
    "background": { 
      "scripts": [
        "lib/jquery/jquery-1.9.1.min.js",
        "lib/readibility-0.5.1/readibility.js",
        "readOnPaper.js"
      ],
      "persistent": false
    },
    "browser_action": {
        "default_title": "Read on paper",
        "default_icon": "icon.png"
    },
    "permissions": [
        "tabs", 
        "http://*/*",
        "https://*/*"
    ]
}