{
    "manifest_version": 2,

    "name": "Read On Paper",
    "description": "Sends page's text to a tablet for reading.",
    "version": "0.1",
    "background": { 
      "scripts": [
        "lib/jquery/jquery-1.9.1.min.js",
        "lib/lodash/underscore-min.js",
        "readOnPaper.js"
      ],
      "persistent": true
    },
    "browser_action": {
        "default_title": "Read on paper",
        "default_icon": "icon.png"
    },
    "permissions": [
        "tabs", 
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": [
            "lib/readability-0.5.1/readability.js"
        ],
        "css": [
            "lib/readability-0.5.1/readability.css"
        ]
    }]
}